@model Capa_Entidad.Producto

@{
    ViewBag.Title = "Eliminar Producto";
}

<div class="container mt-4">
    <div class="card shadow rounded border-danger">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">Eliminar Producto</h4>
        </div>

        <div class="card-body">
            <div class="alert alert-danger">
                <strong>¿Estás seguro?</strong> Vas a eliminar el producto: <strong>@Model.nom_pro</strong>
            </div>

            <table class="table table-bordered table-striped">
                <tbody>
                    <tr>
                        <th>Código</th>
                        <td>@Model.cod_produc</td>
                    </tr>
                    <tr>
                        <th>Nombre</th>
                        <td>@Model.nom_pro</td>
                    </tr>
                    <tr>
                        <th>Unidad de Medida</th>
                        <td>@Model.uni_med</td>
                    </tr>
                    <tr>
                        <th>Precio</th>
                        <td>S/ @Model.pre_pro</td>
                    </tr>
                    <tr>
                        <th>Stock</th>
                        <td>@Model.stk_pro</td>
                    </tr>
                    <tr>
                        <th>Material</th>
                        <td>@Model.mat_pro</td>
                    </tr>
                    <tr>
                        <th>Proveedor</th>
                        <td>@Model.nom_prov (@Model.cod_prov)</td>
                    </tr>
                    <tr>
                        <th>Categoría</th>
                        <td>@Model.nom_cate (@Model.cod_cate)</td>
                    </tr>
                </tbody>
            </table>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="d-flex justify-content-between">
                    <input type="submit" value="Eliminar definitivamente" class="btn btn-danger"
                           onclick="return confirm('¿Estás completamente seguro de eliminar este producto?');" />
                    @Html.ActionLink("Cancelar", "IndexProducto", null, new { @class = "btn btn-secondary" })
                </div>
            }
        </div>
    </div>
</div>
