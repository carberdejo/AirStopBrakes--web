@model Capa_Entidad.Proveedor

@{
    ViewBag.Title = "Eliminar Proveedor";
}

<div class="container mt-4">
    <div class="card shadow rounded border-danger">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">Eliminar Proveedor</h4>
        </div>

        <div class="card-body">
            <div class="alert alert-danger">
                <strong>¿Estás seguro?</strong> Vas a eliminar el proveedor: <strong>@Model.nom_prov</strong>
            </div>

            <table class="table table-bordered table-striped">
                <tbody>
                    <tr>
                        <th>Código</th>
                        <td>@Model.cod_prov</td>
                    </tr>
                    <tr>
                        <th>Nombre</th>
                        <td>@Model.nom_prov</td>
                    </tr>
                    <tr>
                        <th>Unidad de Medida</th>
                        <td>@Model.pais_origen</td>
                    </tr>
                    <tr>
                        <th>Precio</th>
                        <td>S/ @Model.email</td>
                    </tr>
                    <tr>
                        <th>Stock</th>
                        <td>@Model.telefono</td>
                    </tr>
                   
                </tbody>
            </table>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="d-flex justify-content-between">
                    <input type="submit" value="Eliminar definitivamente" class="btn btn-danger"
                           onclick="return confirm('¿Estás completamente seguro de eliminar este producto?');" />
                    @Html.ActionLink("Cancelar", "IndexProveedor", null, new { @class = "btn btn-secondary" })
                </div>
            }
        </div>
    </div>
</div>

