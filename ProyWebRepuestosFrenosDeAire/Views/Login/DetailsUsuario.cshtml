@model Capa_Entidad.Usuario

@{
    ViewBag.Title = "Perfil de Usuario";
}

@*<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />*@

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow-lg rounded-4 border-0">
                <div class="card-body text-center p-4">
                    <div class="mb-3">
                        <img src="https://cdn-icons-png.flaticon.com/512/149/149071.png" alt="Avatar" class="rounded-circle shadow" width="120" height="120" />
                    </div>
                    <h3 class="fw-bold mb-1">@Model.nom_usu @Model.ape_usu</h3>
                    <p class="text-muted mb-3"><i class="bi bi-envelope-at-fill me-2"></i>@Model.cor_usu</p>
                    <div class="row text-start mt-4 px-4">
                        <div class="col-12 mb-3">
                            <i class="bi bi-person-badge-fill me-2 text-primary"></i><strong>Código:</strong> @Model.cod_usu
                        </div>
                        <div class="col-12 mb-3">
                            <i class="bi bi-phone-fill me-2 text-success"></i><strong>Teléfono:</strong> @Model.tel_usu
                        </div>
                        <div class="col-12 mb-3">
                            <i class="bi bi-calendar-event-fill me-2 text-info"></i><strong>Fecha de nacimiento:</strong> @Model.fec_nac.ToShortDateString()
                        </div>
                        <div class="col-12 mb-3">
                            <i class="bi bi-geo-alt-fill me-2 text-danger"></i><strong>Distrito:</strong> @Model.cod_dist
                        </div>
                        <div class="col-12 mb-3">
                            <i class="bi bi-shield-lock-fill me-2 text-dark"></i><strong>Rol:</strong> @Model.cod_rol
                        </div>
                        <div class="col-12 mb-3">
                            <i class="bi bi-lock-fill me-2 text-warning"></i><strong>Contraseña:</strong> ••••••••
                        </div>
                    </div>
                    <div class="d-flex justify-content-center mt-4 gap-3">
                        @Html.ActionLink("✏️ Editar Perfil", "Edit", new { id = Model.cod_usu }, new { @class = "btn btn-outline-primary px-4" })
                        @Html.ActionLink("🔙 Volver", "Index", null, new { @class = "btn btn-secondary px-4" })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
